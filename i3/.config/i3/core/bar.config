set $black #282a36
set $gray #44475a
set $text #f8f8f2
set $blue #6272a4
set $cyan #8be9fd
set $green #50fa7b
set $orange #ffb86c
set $pink #ff79c6
set $purple #bd93f9
set $red #ff5555
set $yellow #f1fa8c

bar {
  position top
  status_command i3status
  separator_symbol |
  font pango:FiraCode Nerd Font 9

  colors {
    background $black
    statusline $text
    separator  $gray

    focused_workspace  $gray $gray $text
    active_workspace   $black $gray $text
    inactive_workspace $black $black $text
    urgent_workspace   $red $red $text
    binding_mode       $red $red $text
  }
}
