general {
  colors = true
  color_good = "#50FA7B"
  color_degraded = "#F1FA8C"
  color_bad = "#FF5555"
  interval = 5
}

order += "wireless _first_"
wireless _first_ {
  format_up = ": %quality"
  format_down = ""
}

